<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="XFSearch.MainPage"
			 Title="메인 화면">

	<ContentPage.Content>

		<Grid RowDefinitions="50, 50, 50, *" ColumnDefinitions="80, *, 100">

			<Grid Grid.Row="0" Grid.Column="0">
				<Label Text="거래처 정보" 
					   HorizontalOptions="FillAndExpand"
					   HorizontalTextAlignment="End" 
					   VerticalTextAlignment="Center"/>
			</Grid>
			<Grid Grid.Row="0" Grid.Column="1">
				<StackLayout Orientation="Horizontal">
					<Entry x:Name="VendCD" WidthRequest="70"/>
					<Entry x:Name="VendNM" WidthRequest="120"/>
				</StackLayout>
			</Grid>

			<Grid Grid.Row="0" Grid.Column="2">
				<Button Text="거래처 검색" x:Name="SearchVendorButton" Clicked="SearchVendorButton_Clicked"/>
			</Grid>
				
				
			
		</Grid>

	</ContentPage.Content>

</ContentPage>
